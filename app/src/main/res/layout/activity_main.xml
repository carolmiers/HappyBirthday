<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.happybirthday.MainActivity">
    <ImageView
        android:src="@drawable/canadageese8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <ImageView
        android:src="@drawable/man_quill1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"/>
    <ImageView
        android:id="@+id/my_balloon"
        android:src="@drawable/balloon7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/my_balloonR"
        android:src="@drawable/balloon8"
        android:layout_toRightOf="@id/my_balloon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:src="@drawable/balloon6"
        android:id="@+id/my_balloon2R"
        android:layout_toRightOf="@id/my_balloonR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:src="@drawable/gosling5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birthday_kid"
        android:textSize="@dimen/bc_textsize"
        android:layout_margin="20dp"
        android:textColor="@color/Burgundy"
        android:fontFamily="sans-serif-light"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:text="@string/sign_off"
        android:textColor="@color/Pink"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/bc_textsize"
        />
</RelativeLayout>
